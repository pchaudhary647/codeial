const posts = require("../models/posts");

module.exports.create = function (req, res) {
  try {
    posts.create(
      {
        content: req.body.content,
        user: req.user._id,
      },
      function (err, post) {
        if (err) {
          console.log("error in creating post");
          return;
        }
        return res.redirect("back");
      }
    );
  } catch (e) {
    throw e;
  }
};
